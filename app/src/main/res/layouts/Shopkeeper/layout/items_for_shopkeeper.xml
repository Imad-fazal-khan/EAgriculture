    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    tools:context=".Shopkeeper.Shopkeeper_Pages.Shopkeeper_Page">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
