<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".Shopkeeper.Shopkeeper_Pages.Post_Data_ToFirebase">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_menu_gallery"
        android:tooltipText="Get Image"
        android:scaleType="fitXY"
        android:id="@+id/ib_take_image"/>


        <EditText
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:background="@drawable/et_rounded"
            android:id="@+id/et_post_title"
            android:hint="Title/Name"/>
    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:background="@drawable/et_rounded"
        android:id="@+id/et_post_price"
        android:inputType="numberSigned"
        android:hint="Price"/>
            <EditText
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:background="@drawable/et_rounded"
                android:id="@+id/et_post_quantity"
                android:inputType="numberSigned"
                android:hint="Quantity" />
    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:gravity="top|left"
       android:maxLines="3"
        android:minLines="2"
        android:id="@+id/et_description_post"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:background="@drawable/et_rounded"
        android:hint="Description"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
       android:background="@drawable/et_rounded"
        android:id="@+id/btn_save_data_toDatabase"
        android:text="Save Data To DataBase"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>